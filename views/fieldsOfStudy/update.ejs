<h1>Edit Field of Study</h1>

<form action="/fields-of-study/<%= fieldOfStudy._id %>?_method=PUT" method="POST">
    <!-- Add this line for method override -->
    <input type="hidden" name="_method" value="PUT">

    <label for="name">Field of Study Name:</label>
    <input type="text" id="name" name="name" value="<%= fieldOfStudy.name %>" required>

    <button type="submit">Update Field of Study</button>
</form>

<form action="/fields-of-study/<%= fieldOfStudy._id %>?_method=DELETE" method="POST">

    <p>Are you sure you want to delete <%= fieldOfStudy.name %>?</p>

    <button type="submit" style="color: red;">Delete Field of Study</button>
</form>